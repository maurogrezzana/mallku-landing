---
import { siteConfig, whatsappLinks } from '../data/site';
import { useTranslations, getLocalePath } from '../i18n/index';
import { defaultLocale } from '../i18n/locales';
import type { Locale } from '../i18n/locales';

interface Props {
  locale?: Locale;
}

const { locale = defaultLocale } = Astro.props;
const t = useTranslations(locale);

const navLinks = [
  { href: getLocalePath('/excursiones', locale), label: t('nav.excursions') },
  { href: getLocalePath('/calendario', locale), label: t('nav.calendar') },
  { href: getLocalePath('/blog', locale), label: t('nav.blog') },
  { href: getLocalePath('/galeria', locale), label: t('nav.gallery') },
  { href: getLocalePath('/nosotros', locale), label: t('nav.about') },
  { href: getLocalePath('/contacto', locale), label: t('nav.contact') },
];
---

<footer class="footer">
  <div class="wrap">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-brand">
        <a href={getLocalePath('/', locale)} class="footer-logo">
          <img src="/images/logos/logo-blanco.png" alt="Mallku" />
        </a>
        <p>{t('footer.tagline')}</p>
      </div>

      <!-- Navigation -->
      <div class="footer-nav">
        <h4>{t('footer.navigation')}</h4>
        <ul>
          {navLinks.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer-contact-info">
        <h4>{t('footer.contact')}</h4>
        <ul>
          <li>
            <a href={whatsappLinks.general} target="_blank" rel="noopener">
              <svg class="contact-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
              WhatsApp: {siteConfig.contact.whatsappDisplay}
            </a>
          </li>
          <li>
            <a href={`mailto:${siteConfig.contact.email}`}>
              <svg class="contact-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
              {siteConfig.contact.email}
            </a>
          </li>
          <li>
            <a href={siteConfig.contact.instagramUrl} target="_blank" rel="noopener">
              <svg class="contact-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
              {siteConfig.contact.instagram}
            </a>
          </li>
        </ul>
        <p class="location">
          <svg class="contact-icon" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 010-5 2.5 2.5 0 010 5z"/></svg>
          {siteConfig.contact.location}
        </p>
      </div>
    </div>

    <div class="footer-trust">
      <p>Guía profesional habilitado · Seguro de responsabilidad civil · Vehículos habilitados</p>
    </div>

    <div class="footer-bottom">
      <p>&copy; <span id="footer-year"></span> {siteConfig.name}. {t('footer.rights')}</p>
      <p class="footer-legal">
        <a href="/politica-de-privacidad">Política de Privacidad</a>
        <span>·</span>
        <a href="/terminos-y-condiciones">Términos y Condiciones</a>
      </p>
    </div>
  </div>
</footer>

<script>
  const yearSpan = document.getElementById('footer-year');
  if (yearSpan) {
    yearSpan.textContent = new Date().getFullYear().toString();
  }
</script>

<style>
  .footer {
    padding: 60px 0 40px;
    background: var(--color-bg-dark);
    border-top: 1px solid var(--color-line-light);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: var(--space-2xl);
    margin-bottom: var(--space-xl);
  }

  .footer-logo {
    display: inline-block;
    margin-bottom: var(--space-md);
  }

  .footer-logo img {
    height: 100px;
    width: auto;
  }

  .footer-brand p {
    font-size: 14px;
    color: rgba(239, 227, 214, 0.7);
    line-height: 1.6;
    max-width: 300px;
  }

  .footer-nav h4,
  .footer-contact-info h4 {
    font-family: var(--font-display);
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-primary);
    margin: 0 0 var(--space-md);
  }

  .footer-nav ul,
  .footer-contact-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav li,
  .footer-contact-info li {
    margin-bottom: 10px;
  }

  .contact-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .footer-contact-info a,
  .footer-contact-info .location {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .footer-nav a,
  .footer-contact-info a {
    font-size: 14px;
    color: rgba(239, 227, 214, 0.75);
    transition: color var(--transition-normal);
  }

  .footer-nav a:hover,
  .footer-contact-info a:hover {
    color: var(--color-primary);
  }

  .location {
    margin-top: var(--space-md);
    font-size: 13px;
    color: rgba(239, 227, 214, 0.5);
  }

  .footer-trust {
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-line-light);
    text-align: center;
  }

  .footer-trust p {
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: rgba(239, 227, 214, 0.45);
    margin: 0;
  }

  .footer-bottom {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-line-light);
    text-align: center;
  }

  .footer-bottom p {
    font-size: 13px;
    color: rgba(239, 227, 214, 0.5);
    margin: 0;
  }

  .footer-legal {
    margin-top: 8px !important;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .footer-legal a {
    font-size: 12px;
    color: rgba(239, 227, 214, 0.4);
    transition: color var(--transition-normal);
  }

  .footer-legal a:hover {
    color: var(--color-primary);
  }

  .footer-legal span {
    color: rgba(239, 227, 214, 0.3);
    font-size: 12px;
  }

  @media (max-width: 800px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      text-align: center;
    }

    .footer-brand p {
      max-width: none;
    }

    .footer-nav ul,
    .footer-contact-info ul {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 8px 20px;
    }

    .footer-nav li,
    .footer-contact-info li {
      margin-bottom: 0;
    }
  }
</style>
