---
interface Props {
  quote: string;
  author: string;
  location: string;
}

const { quote, author, location } = Astro.props;
---

<div class="testimonial-card">
  <svg class="quote-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
    <path d="M6 17h3l2-4V7H5v6h3l-2 4zm8 0h3l2-4V7h-6v6h3l-2 4z"/>
  </svg>
  <p>"{quote}"</p>
  <div class="testimonial-footer">
    <div class="stars">★★★★★</div>
    <div class="testimonial-author">— {author}, {location}</div>
  </div>
</div>

<style>
  .testimonial-card {
    padding: 32px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    background: rgba(255, 255, 255, 0.08);
    display: flex;
    flex-direction: column;
  }

  .quote-icon {
    width: 28px;
    height: 28px;
    fill: rgba(255, 255, 255, 0.25);
    margin-bottom: 16px;
    flex-shrink: 0;
  }

  .testimonial-card p {
    margin: 0 0 20px;
    font-size: 15px;
    line-height: 1.75;
    font-style: italic;
    flex-grow: 1;
  }

  .testimonial-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.12);
    padding-top: 16px;
  }

  .stars {
    color: #fff;
    font-size: 14px;
    letter-spacing: 2px;
    margin-bottom: 8px;
  }

  .testimonial-author {
    font-family: var(--font-display);
    font-size: 12px;
    opacity: 0.75;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
</style>
