---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="why-card">
  <div class="why-icon" set:html={icon} />
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .why-card {
    padding: 32px;
    border: 1px solid var(--color-line-dark);
    background: #fff;
    text-align: left;
  }

  .why-icon {
    margin-bottom: 20px;
    color: var(--terracota);
  }

  .why-icon :global(svg) {
    width: 36px;
    height: 36px;
    stroke: currentColor;
    stroke-width: 1.5;
    fill: none;
  }

  .why-card h3 {
    margin: 0 0 12px;
    font-size: 20px;
    color: var(--azul);
  }

  .why-card p {
    margin: 0;
    font-size: 14px;
    color: var(--marron);
    line-height: 1.7;
  }
</style>
