---
import { whatsappLinks } from '../data/site';
import { useTranslations, getLocalePath } from '../i18n/index';
import { defaultLocale } from '../i18n/locales';
import type { Locale } from '../i18n/locales';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  locale?: Locale;
}

const { locale = defaultLocale } = Astro.props;
const t = useTranslations(locale);

const navLinks = [
  { href: getLocalePath('/', locale), label: t('nav.home') },
  { href: getLocalePath('/excursiones', locale), label: t('nav.excursions') },
  { href: getLocalePath('/experiencias/mallku-experience-4x4', locale), label: t('nav.experience4x4') },
  { href: getLocalePath('/calendario', locale), label: t('nav.calendar') },
  { href: getLocalePath('/blog', locale), label: t('nav.blog') },
  { href: getLocalePath('/nosotros', locale), label: t('nav.about') },
  { href: getLocalePath('/contacto', locale), label: t('nav.contact') },
];

const currentPath = Astro.url.pathname;
const homePath = getLocalePath('/', locale);
---

<header class="nav">
  <div class="nav-inner">
    <a href={homePath} class="brand">
      <img src="/images/logos/logo-blanco.png" alt="Mallku Excursiones ArqueolÃ³gicas" />
    </a>

    <nav class="nav-links">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={['nav-link', { active: currentPath === link.href || (link.href !== homePath && currentPath.startsWith(link.href)) }]}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <div class="nav-actions">
      <LanguageSwitcher locale={locale} />
      <a class="nav-cta" href={whatsappLinks.fechas} target="_blank" rel="noopener">
        {t('nav.cta')}
      </a>
    </div>

    <!-- Mobile menu button -->
    <button class="mobile-menu-btn" aria-label={t('nav.menuLabel')}>
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile nav -->
  <nav class="mobile-nav">
    {navLinks.map((link) => (
      <a href={link.href} class="mobile-nav-link">{link.label}</a>
    ))}
    <div class="mobile-lang-switcher">
      <LanguageSwitcher locale={locale} />
    </div>
    <a class="mobile-nav-cta" href={whatsappLinks.fechas} target="_blank" rel="noopener">
      {t('nav.mobileCta')}
    </a>
  </nav>
</header>

<script>
  const menuBtn = document.querySelector('.mobile-menu-btn');
  const mobileNav = document.querySelector('.mobile-nav');
  const header = document.querySelector('.nav');

  menuBtn?.addEventListener('click', () => {
    header?.classList.toggle('menu-open');
  });

  // Close menu when clicking a link
  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', () => {
      header?.classList.remove('menu-open');
    });
  });
</script>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(14px);
    background: rgba(6, 27, 56, 0.92);
    border-bottom: 1px solid var(--color-line-light);
  }

  .nav-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 8px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  .brand {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .brand img {
    height: 110px;
    width: auto;
  }

  /* Nav Links */
  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .nav-link {
    padding: 10px 12px;
    font-family: var(--font-display);
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: rgba(239, 227, 214, 0.75);
    border-radius: var(--radius-sm);
    transition: all var(--transition-normal);
  }

  .nav-link:hover {
    color: var(--color-text-light);
    background: rgba(239, 227, 214, 0.08);
  }

  .nav-link.active {
    color: var(--color-primary);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-shrink: 0;
  }

  .nav-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    border-radius: 0;
    background: var(--color-primary);
    border: none;
    font-family: var(--font-display);
    font-weight: 400;
    font-size: 14px;
    color: #fff;
    transition: background var(--transition-normal);
    flex-shrink: 0;
  }

  .nav-cta:hover {
    background: var(--color-primary-hover);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 32px;
    height: 32px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .mobile-menu-btn span {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-text-light);
    transition: all var(--transition-normal);
  }

  .menu-open .mobile-menu-btn span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-open .mobile-menu-btn span:nth-child(2) {
    opacity: 0;
  }

  .menu-open .mobile-menu-btn span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Mobile Nav */
  .mobile-nav {
    display: none;
    flex-direction: column;
    padding: var(--space-md) var(--space-lg) var(--space-lg);
    background: var(--color-bg-dark);
    border-top: 1px solid var(--color-line-light);
  }

  .mobile-nav-link {
    padding: var(--space-md);
    font-family: var(--font-display);
    font-size: 16px;
    text-transform: uppercase;
    color: var(--color-text-light);
    border-bottom: 1px solid var(--color-line-light);
  }

  .mobile-lang-switcher {
    padding: var(--space-md) 0;
    display: flex;
    justify-content: center;
  }

  .mobile-nav-cta {
    margin-top: var(--space-md);
    padding: var(--space-md);
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-display);
    font-size: 14px;
    text-transform: uppercase;
    text-align: center;
    border-radius: var(--radius-md);
  }

  @media (max-width: 900px) {
    .nav-links,
    .nav-actions {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .menu-open .mobile-nav {
      display: flex;
    }

    .brand img {
      height: 75px;
    }
  }
</style>
