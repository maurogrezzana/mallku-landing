---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { useTranslations, getLocalePath } from '../i18n/index';
import { defaultLocale } from '../i18n/locales';
import type { Locale } from '../i18n/locales';

interface Props {
  slug: string;
  titulo: string;
  excerpt: string;
  fecha: string;
  categoria: string;
  tiempoLectura: string;
  image?: ImageMetadata;
  locale?: Locale;
}

const { slug, titulo, excerpt, fecha, categoria, tiempoLectura, image, locale = defaultLocale } = Astro.props;
const t = useTranslations(locale);

const dateLocaleMap: Record<Locale, string> = { es: 'es-AR', en: 'en-US', fr: 'fr-FR' };
const fechaFormateada = new Date(fecha).toLocaleDateString(dateLocaleMap[locale], {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});

const blogPath = getLocalePath(`/blog/${slug}`, locale);
const readSuffix = locale === 'en' ? 'read' : locale === 'fr' ? 'de lecture' : 'lectura';
const readMore = locale === 'en' ? 'Read article →' : locale === 'fr' ? 'Lire l\'article →' : 'Leer artículo →';
---

<a href={blogPath} class="blog-card">
  <div class="blog-image">
    {image && <Image src={image} alt={titulo} loading="lazy" />}
    <span class="categoria-tag">{categoria}</span>
  </div>
  <div class="blog-content">
    <div class="blog-meta">
      <span class="fecha">{fechaFormateada}</span>
      <span class="separador">·</span>
      <span class="lectura">{tiempoLectura} {readSuffix}</span>
    </div>
    <h3>{titulo}</h3>
    <p>{excerpt}</p>
    <span class="leer-mas">{readMore}</span>
  </div>
</a>

<style>
  .blog-card {
    display: block;
    background: rgba(239, 227, 214, 0.05);
    border: 1px solid var(--color-line-light);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 50px rgba(0, 0, 0, 0.35);
  }

  .blog-image {
    position: relative;
    height: 240px;
    overflow: hidden;
  }

  .blog-image :global(img) {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .categoria-tag {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 6px 14px;
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    z-index: 2;
  }

  .blog-content {
    padding: 24px;
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
    font-size: 13px;
    color: rgba(239, 227, 214, 0.6);
  }

  .separador {
    opacity: 0.4;
  }

  .blog-content h3 {
    margin: 0 0 12px;
    font-size: 20px;
    line-height: 1.3;
    transition: color 0.2s ease;
  }

  .blog-card:hover h3 {
    color: var(--color-primary);
  }

  .blog-content p {
    margin: 0 0 16px;
    font-size: 14px;
    color: rgba(239, 227, 214, 0.75);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .leer-mas {
    font-family: var(--font-display);
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-primary);
    transition: letter-spacing 0.2s ease;
  }

  .blog-card:hover .leer-mas {
    letter-spacing: 1.5px;
  }
</style>
