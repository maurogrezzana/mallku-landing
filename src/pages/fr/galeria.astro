    items: [
      { titulo: 'Ruines d\'Ibatín', src: '/images/Ibatin 1.jpg' },
      { titulo: 'Ibatín - Excavation', src: '/images/ibatin 2.jpg' },
      { titulo: 'Ibatín - Restes', src: '/images/Ibatin 3.jpg' },
      { titulo: 'Ibatín - Site', src: '/images/Ibatin 4.jpg' },
      { titulo: 'Ibatín - Vue', src: '/images/Ibatin 5.jpg' },
      { titulo: 'Musée Jésuite', src: '/images/Museo jesuita 1.jpg' },
      { titulo: 'Musée Jésuite - Intérieur', src: '/images/museo jesuita 2.jpg' },
      { titulo: 'Musée Jésuite - Détail', src: '/images/museo jesuita 3.jpg' },
