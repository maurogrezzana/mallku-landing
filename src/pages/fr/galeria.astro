      { titulo: 'Quilmes - Sentier', src: '/images/quilmes 5.jpg' },
      { titulo: 'Quilmes - Murs ancestraux', src: '/images/Quilmes 6.jpg' },
      { titulo: 'Quilmes - Paysage', src: '/images/Quilmes 7.jpg' },
    ]
  },
  {
