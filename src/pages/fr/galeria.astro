      { titulo: 'ANS - Paysage', src: '/images/ANS 6.jpg' },
      { titulo: 'ANS - Chemin', src: '/images/ANS 9.jpg' },
      { titulo: 'ANS - Vue panoramique', src: '/images/ANS 12.jpg' },
      { titulo: 'ANS - Formations', src: '/images/ANS 15.jpg' },
