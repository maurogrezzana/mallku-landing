---
import { Image } from 'astro:assets';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import WhatsAppFloat from '../../../components/WhatsAppFloat.astro';
import { getExcursiones } from '../../../data/get-data';
import { resolveImage } from '../../../utils/images';

const locale = 'en';
const excursiones = await getExcursiones(locale);
const exp4x4Img = resolveImage('/images/Real Grande 3.jpg');
---

<BaseLayout
  title="Excursions"
  description="Discover our archaeological excursions in northwestern Argentina: Quilmes, Tafi del Valle, menhirs, Ibatin and more. Small groups, specialized guides."
  locale="en"
>
  <WhatsAppFloat />
  <Header locale="en" />

  <main>
    <!-- HERO -->
    <section class="hero">
      <div class="wrap text-center">
        <h1>Our <span class="accent">Excursions</span></h1>
        <p class="hero-lead">
          Archaeological experiences designed to connect you with the deep history of northwestern Argentina.
          Each departure is unique, with small groups and specialized guides.
        </p>
      </div>
    </section>

    <!-- EXCURSION LIST -->
    <section class="section section-dark">
      <div class="wrap">
        <div class="excursiones-list">
          {excursiones.map((exc) => (
            <a href={`/en/excursiones/${exc.slug}`} class="excursion-card">
              <div class="excursion-image">
                <span class="excursion-tag">{exc.tag}</span>
                <Image src={resolveImage(exc.imagen)} alt={exc.titulo} loading="lazy" />
              </div>
              <div class="excursion-content">
                <h2>{exc.titulo}</h2>
                <p class="excursion-subtitulo">{exc.subtitulo}</p>
                <p class="excursion-desc">{exc.descripcion}</p>

                <div class="excursion-meta">
                  <div class="meta-item">
                    <strong>Duration</strong>
                    <span>{exc.duracion}</span>
                  </div>
                  <div class="meta-item">
                    <strong>Difficulty</strong>
                    <span>{exc.dificultad}</span>
                  </div>
                  <div class="meta-item">
                    <strong>Group</strong>
                    <span>{exc.grupoMax}</span>
                  </div>
                </div>

                <div class="excursion-footer">
                  <span class="footer-incluye">All-inclusive &middot; Small groups</span>
                  <span class="ver-mas">View details &rarr;</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- 4X4 EXPERIENCE BANNER -->
    <section class="section section-light">
      <div class="wrap">
        <a href="/en/experiencias/mallku-experience-4x4" class="banner-4x4">
          <div class="banner-img">
            <Image src={exp4x4Img} alt="Mallku Experience 4x4" loading="lazy" />
          </div>
          <div class="banner-content">
            <span class="banner-tag">Premium Experience</span>
            <h2>Mallku Experience 4x4</h2>
            <p>4 days exploring the Catamarca Puna in a 4x4 vehicle. Campo de Piedra Pomez, Volcan Galan, thousand-year-old archaeological sites.</p>
            <span class="banner-cta">View full itinerary &rarr;</span>
          </div>
        </a>
      </div>
    </section>

    <!-- INFO -->
    <section class="section section-dark">
      <div class="wrap text-center">
        <h2 class="section-title">All-inclusive on every departure</h2>
        <div class="incluye-grid">
          <div class="incluye-item">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/></svg>
            <p>Comfortable round-trip transportation</p>
          </div>
          <div class="incluye-item">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 3L1 9l11 6 9-4.91V17h2V9M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82z"/></svg>
            <p>Specialized archaeologist guide</p>
          </div>
          <div class="incluye-item">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M22 10V6c0-1.11-.9-2-2-2H4c-1.1 0-1.99.89-1.99 2v4c1.1 0 1.99.9 1.99 2s-.89 2-2 2v4c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2v-4c-1.1 0-2-.9-2-2s.9-2 2-2zm-9 7.5h-2v-2h2v2zm0-4.5h-2v-2h2v2zm0-4.5h-2v-2h2v2z"/></svg>
            <p>All entrance fees included</p>
          </div>
          <div class="incluye-item">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M11 9H9V2H7v7H5V2H3v7c0 2.12 1.66 3.84 3.75 3.97V22h2.5v-9.03C11.34 12.84 13 11.12 13 9V2h-2v7zm5-3v8h2.5v8H21V2c-2.76 0-5 2.24-5 4z"/></svg>
            <p>Full lunch with beverage</p>
          </div>
          <div class="incluye-item">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/></svg>
            <p>Liability insurance</p>
          </div>
          <div class="incluye-item">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2c-5.33 4.55-8 8.48-8 11.8 0 4.98 3.8 8.2 8 8.2s8-3.22 8-8.2c0-3.32-2.67-7.25-8-11.8zm0 18c-3.35 0-6-2.57-6-6.2 0-2.34 1.95-5.44 6-9.14 4.05 3.7 6 6.79 6 9.14 0 3.63-2.65 6.2-6 6.2z"/></svg>
            <p>Mineral water during the tour</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer locale="en" />
</BaseLayout>

<style>
  .hero {
    padding: 80px 0 60px;
    background:
      radial-gradient(ellipse 80% 50% at 50% 0%, rgba(209, 107, 56, 0.15), transparent),
      var(--color-bg-dark);
  }

  .hero h1 {
    margin: 0 0 20px;
    font-size: clamp(40px, 6vw, 56px);
  }

  .hero .accent {
    color: var(--color-primary);
  }

  .hero-lead {
    font-size: 18px;
    color: rgba(239, 227, 214, 0.8);
    max-width: 65ch;
    margin: 0 auto;
  }

  /* Excursiones List */
  .excursiones-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .excursion-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: rgba(239, 227, 214, 0.05);
    border: 1px solid var(--color-line-light);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .excursion-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .excursion-image {
    position: relative;
    overflow: hidden;
  }

  .excursion-image img {
    width: 100%;
    height: 100%;
    min-height: 300px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .excursion-card:hover .excursion-image img {
    transform: scale(1.05);
  }

  .excursion-tag {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    padding: 8px 14px;
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 0;
  }

  .excursion-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
  }

  .excursion-content h2 {
    margin: 0 0 var(--space-xs);
    font-size: 28px;
  }

  .excursion-subtitulo {
    margin: 0 0 var(--space-md);
    font-size: 16px;
    color: var(--color-primary);
    font-weight: 600;
  }

  .excursion-desc {
    margin: 0 0 var(--space-lg);
    color: rgba(239, 227, 214, 0.75);
    line-height: 1.7;
    flex-grow: 1;
  }

  .excursion-meta {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
    padding: var(--space-md);
    background: rgba(6, 27, 56, 0.4);
    border-radius: var(--radius-md);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .meta-item strong {
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: rgba(239, 227, 214, 0.6);
  }

  .meta-item span {
    font-size: 14px;
  }

  .excursion-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-line-light);
  }

  .footer-incluye {
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: rgba(239, 227, 214, 0.5);
  }

  .ver-mas {
    font-family: var(--font-display);
    font-size: 14px;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  /* Incluye Grid */
  .incluye-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .incluye-item {
    padding: var(--space-lg);
    background: #fff;
    border: 1px solid var(--color-line-dark);
  }

  .incluye-item svg {
    width: 28px;
    height: 28px;
    fill: var(--terracota);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .incluye-item p {
    margin: 0;
    font-size: 14px;
    color: var(--marron);
  }

  /* Banner 4x4 */
  .banner-4x4 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 2px solid var(--color-primary);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .banner-4x4:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(209, 107, 56, 0.2);
  }

  .banner-img {
    overflow: hidden;
  }

  .banner-img img {
    width: 100%;
    height: 100%;
    min-height: 250px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .banner-4x4:hover .banner-img img {
    transform: scale(1.05);
  }

  .banner-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .banner-tag {
    display: inline-block;
    width: fit-content;
    padding: 6px 14px;
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 0;
    margin-bottom: var(--space-sm);
  }

  .banner-content h2 {
    margin: 0 0 var(--space-sm);
    font-size: 28px;
    color: var(--azul);
  }

  .banner-content p {
    margin: 0 0 var(--space-md);
    color: var(--marron);
    line-height: 1.6;
  }

  .banner-cta {
    font-family: var(--font-display);
    font-size: 14px;
    text-transform: uppercase;
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (max-width: 900px) {
    .excursion-card {
      grid-template-columns: 1fr;
    }

    .excursion-meta {
      flex-wrap: wrap;
    }

    .incluye-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .banner-4x4 {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .incluye-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
