<style>
  .hero-nosotros {
    padding: 80px 0 60px;
    background:
      radial-gradient(ellipse 80% 50% at 50% 0%, rgba(209, 107, 56, 0.15), transparent),
      var(--color-bg-dark);
  }

  .hero-nosotros h1 {
    margin: 0 0 20px;
    font-size: clamp(40px, 6vw, 56px);
  }

  .hero-nosotros .accent {
    color: var(--color-primary);
  }

  .hero-lead {
    font-size: 18px;
    color: rgba(239, 227, 214, 0.8);
    max-width: 60ch;
    margin: 0 auto;
  }

  /* Content Grid */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .content-grid.reverse {
    direction: rtl;
  }

  .content-grid.reverse > * {
    direction: ltr;
  }

  .content-text h2 {
    margin: 0 0 var(--space-md);
    font-size: 32px;
  }

  .section-light .content-text h2 {
    color: var(--azul);
  }

  .content-text p {
    margin: 0 0 var(--space-sm);
    line-height: 1.8;
  }

  .section-light .content-text p {
    color: var(--marron);
  }

  .highlight-text {
    font-style: italic;
    font-size: 18px;
    color: var(--color-primary) !important;
    padding: var(--space-md);
    border-left: 3px solid var(--color-primary);
    margin: var(--space-md) 0 !important;
  }

  .image-placeholder {
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, rgba(209, 107, 56, 0.2), rgba(6, 27, 56, 0.1));
    border: 2px dashed var(--color-primary);
    border-radius: var(--radius-xl);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .image-placeholder.dark {
    background: linear-gradient(135deg, rgba(239, 227, 214, 0.1), rgba(209, 107, 56, 0.1));
    border-color: var(--color-line-light);
  }

  .image-placeholder span {
    font-size: 64px;
    margin-bottom: var(--space-sm);
  }

  .image-placeholder p {
    font-size: 14px;
    opacity: 0.7;
    margin: 0;
  }

  .section-light .image-placeholder p {
    color: var(--marron);
  }

  /* Mission Grid */
  .mission-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
  }

  .mission-card {
    padding: var(--space-xl);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-xl);
  }

  .mission-card h3 {
    margin: 0 0 var(--space-md);
    font-size: 28px;
  }

  .mission-card p {
    margin: 0 0 var(--space-sm);
    line-height: 1.7;
  }

  .mission-card p:last-child {
    margin-bottom: 0;
  }

  /* Values Grid */
  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .value-card {
    padding: var(--space-lg);
    background: #fff;
    border: 1px solid var(--color-line-dark);
    border-radius: var(--radius-lg);
    text-align: left;
  }

  .value-icon {
    font-size: 32px;
    margin-bottom: var(--space-sm);
  }

  .value-card h4 {
    margin: 0 0 var(--space-xs);
    font-size: 16px;
    color: var(--azul);
  }

  .value-card p {
    margin: 0;
    font-size: 14px;
    color: var(--marron);
    line-height: 1.6;
  }

  /* CTA Dark */
