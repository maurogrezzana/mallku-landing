    margin: 0 auto;
    padding: var(--space-2xl);
    border: 1px solid var(--color-line-light);
    border-radius: var(--radius-xl);
    background: rgba(209, 107, 56, 0.1);
    text-align: center;
  }

  .cta-box-dark h2 {
    margin: 0 0 var(--space-sm);
    font-size: 32px;
  }

  .cta-box-dark p {
