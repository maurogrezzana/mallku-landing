<style>
  .hero {
    padding: 80px 0 60px;
    background:
      radial-gradient(ellipse 80% 50% at 50% 0%, rgba(209, 107, 56, 0.15), transparent),
      var(--color-bg-dark);
  }

  .hero h1 {
    margin: 0 0 20px;
    font-size: clamp(40px, 6vw, 56px);
  }

  .hero .accent {
    color: var(--color-primary);
  }

  .hero-lead {
    font-size: 18px;
    color: rgba(239, 227, 214, 0.8);
    max-width: 65ch;
    margin: 0 auto;
  }

  /* Excursiones List */
  .excursiones-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .excursion-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: rgba(239, 227, 214, 0.05);
    border: 1px solid var(--color-line-light);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .excursion-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .excursion-image {
    position: relative;
    overflow: hidden;
  }

  .excursion-image img {
    width: 100%;
    height: 100%;
    min-height: 300px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .excursion-card:hover .excursion-image img {
    transform: scale(1.05);
  }

  .excursion-tag {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    padding: 8px 14px;
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 6px;
  }

  .excursion-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
  }

  .excursion-content h2 {
    margin: 0 0 var(--space-xs);
    font-size: 28px;
  }

  .excursion-subtitulo {
    margin: 0 0 var(--space-md);
    font-size: 16px;
    color: var(--color-primary);
    font-weight: 600;
  }

  .excursion-desc {
    margin: 0 0 var(--space-lg);
    color: rgba(239, 227, 214, 0.75);
    line-height: 1.7;
    flex-grow: 1;
  }

  .excursion-meta {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
    padding: var(--space-md);
    background: rgba(6, 27, 56, 0.4);
    border-radius: var(--radius-md);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .meta-item strong {
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: rgba(239, 227, 214, 0.6);
  }

  .meta-item span {
    font-size: 14px;
  }

  .excursion-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-line-light);
  }

  .excursion-precio {
    display: flex;
    flex-direction: column;
  }

  .precio-label {
    font-size: 12px;
    opacity: 0.6;
  }

  .precio-valor {
    font-family: var(--font-display);
    font-size: 28px;
    color: var(--color-primary);
  }

  .ver-mas {
    font-family: var(--font-display);
    font-size: 14px;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  /* Incluye Grid */
  .incluye-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .incluye-item {
    padding: var(--space-lg);
    background: #fff;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-line-dark);
  }

  .incluye-item span {
    font-size: 32px;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .incluye-item p {
    margin: 0;
    font-size: 14px;
    color: var(--marron);
  }

  /* Banner 4x4 */
  .banner-4x4 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 2px solid var(--color-primary);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .banner-4x4:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(209, 107, 56, 0.2);
  }

  .banner-img {
    overflow: hidden;
  }

  .banner-img img {
    width: 100%;
    height: 100%;
    min-height: 250px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .banner-4x4:hover .banner-img img {
    transform: scale(1.05);
  }

  .banner-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .banner-tag {
    display: inline-block;
    width: fit-content;
    padding: 6px 14px;
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-display);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 6px;
    margin-bottom: var(--space-sm);
  }

  .banner-content h2 {
    margin: 0 0 var(--space-sm);
    font-size: 28px;
    color: var(--azul);
  }

  .banner-content p {
    margin: 0 0 var(--space-md);
    color: var(--marron);
    line-height: 1.6;
  }

  .banner-cta {
    font-family: var(--font-display);
    font-size: 14px;
    text-transform: uppercase;
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (max-width: 900px) {
    .excursion-card {
      grid-template-columns: 1fr;
    }

    .excursion-meta {
      flex-wrap: wrap;
    }

    .incluye-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .banner-4x4 {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .incluye-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
