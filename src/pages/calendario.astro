---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import { getFechas } from '../data/get-data';

const fechasSalidas = await getFechas('es');
type FechaSalida = Awaited<ReturnType<typeof getFechas>>[number];

// Group dates by month
function agruparPorMes(fechas: FechaSalida[]) {
  const grupos: { [key: string]: { nombre: string; fechas: FechaSalida[] } } = {};

  fechas.forEach(f => {
    const fecha = new Date(f.fecha);
    const key = `${fecha.getFullYear()}-${fecha.getMonth()}`;
    const nombreMes = fecha.toLocaleDateString('es-AR', { month: 'long', year: 'numeric' });

    if (!grupos[key]) {
      grupos[key] = { nombre: nombreMes.charAt(0).toUpperCase() + nombreMes.slice(1), fechas: [] };
    }
    grupos[key].fechas.push(f);
  });

  return Object.values(grupos);
}

const mesesConFechas = agruparPorMes(fechasSalidas);

const API_URL = 'https://mallku-api.vercel.app';

// Format individual date
function formatearFecha(fechaStr: string) {
  const fecha = new Date(fechaStr);
  return {
    dia: fecha.getDate(),
    diaSemana: fecha.toLocaleDateString('es-AR', { weekday: 'long' }),
    mesCorto: fecha.toLocaleDateString('es-AR', { month: 'short' })
  };
}

// Generate WhatsApp link with date
function generarWhatsAppLink(salida: FechaSalida) {
  const fecha = new Date(salida.fecha);
  const fechaTexto = fecha.toLocaleDateString('es-AR', { day: 'numeric', month: 'long' });
  const mensaje = `Hola, quiero consultar disponibilidad para ${salida.excursionNombre} del ${fechaTexto}`;
  return `https://wa.me/5493815702549?text=${encodeURIComponent(mensaje)}`;
}
---

<BaseLayout
  title="Calendario de Salidas"
  description="Próximas fechas de excursiones arqueológicas en Tucumán. Quilmes, Tafí del Valle, menhires. Consultá disponibilidad y asegurá tu lugar."
>
  <WhatsAppFloat />
  <Header />

  <main>
    <!-- HERO -->
    <section class="hero-calendario">
      <div class="wrap text-center">
        <h1>Calendario de <span class="accent">Salidas</span></h1>
        <p class="hero-lead">
          Consultá las próximas fechas disponibles y asegurá tu lugar.
          Grupos reducidos, cupos limitados.
        </p>
      </div>
    </section>

    <!-- LEYENDA -->
    <section class="leyenda-section">
      <div class="wrap">
        <div class="leyenda">
          <div class="leyenda-item">
            <span class="estado-dot disponible"></span>
            <span>Disponible</span>
          </div>
          <div class="leyenda-item">
            <span class="estado-dot pocos-cupos"></span>
            <span>Pocos cupos</span>
          </div>
          <div class="leyenda-item">
            <span class="estado-dot completo"></span>
            <span>Completo</span>
          </div>
        </div>
      </div>
    </section>

    <!-- CALENDARIO POR MES -->
    <div id="calendar-root" data-api-url={API_URL} data-locale="es">
    {mesesConFechas.map((mes) => (
      <section class="section section-dark">
        <div class="wrap">
          <h2 class="mes-titulo">{mes.nombre}</h2>
          <div class="fechas-grid">
            {mes.fechas.map((salida) => {
              const { dia, diaSemana, mesCorto } = formatearFecha(salida.fecha);
              const whatsappLink = generarWhatsAppLink(salida);

              const fechaNorm = salida.fecha.substring(0, 10);
              return (
                <div class={`fecha-card ${salida.estado}`} data-slug={salida.excursionSlug} data-fecha={fechaNorm}>
                  <div class="fecha-header">
                    <div class="fecha-dia">
                      <span class="dia-numero">{dia}</span>
                      <span class="dia-semana">{diaSemana}</span>
                    </div>
                    <span class={`estado-badge ${salida.estado}`}>
                      {salida.estado === 'disponible' && `${salida.cuposDisponibles} cupos`}
                      {salida.estado === 'pocos-cupos' && `¡Solo ${salida.cuposDisponibles}!`}
                      {salida.estado === 'completo' && 'Completo'}
                    </span>
                  </div>

                  <div class="fecha-content">
                    <h3>{salida.excursionNombre}</h3>
                  </div>

                  <div class="fecha-footer">
                    {salida.estado !== 'completo' ? (
                      <a href={whatsappLink} target="_blank" rel="noopener" class="btn btn-primary btn-full">
                        Consultar
                      </a>
                    ) : (
                      <button class="btn btn-disabled btn-full" disabled>
                        Sin cupos
                      </button>
                    )}
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </section>
    ))}

    </div>{/* calendar-root */}

    <!-- INFO -->
    <section class="section section-light">
      <div class="wrap">
        <div class="info-box">
          <h3>¿Cómo funciona?</h3>
          <div class="info-grid">
            <div class="info-item">
              <span class="info-icon"><svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/></svg></span>
              <div>
                <strong>Consultá por WhatsApp</strong>
                <p>Escribinos y te confirmamos disponibilidad al instante.</p>
              </div>
            </div>
            <div class="info-item">
              <span class="info-icon"><svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"/></svg></span>
              <div>
                <strong>Seña del 30-50%</strong>
                <p>Para confirmar tu lugar. El saldo se abona 48hs antes.</p>
              </div>
            </div>
            <div class="info-item">
              <span class="info-icon"><svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z"/></svg></span>
              <div>
                <strong>Reprogramación flexible</strong>
                <p>Con más de 7 días de anticipación, podés cambiar de fecha sin cargo.</p>
              </div>
            </div>
            <div class="info-item">
              <span class="info-icon"><svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/></svg></span>
              <div>
                <strong>Grupos reducidos</strong>
                <p>Máximo 8 personas por salida para garantizar calidad.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section section-terracota">
      <div class="wrap text-center">
        <h2 class="section-title">¿No encontrás la fecha que buscás?</h2>
        <p class="section-subtitle" style="color: rgba(255,255,255,0.85);">
          Escribinos y te avisamos cuando abramos nuevas fechas.
        </p>
        <a class="btn" href="https://wa.me/5493815702549?text=Hola%2C%20quiero%20que%20me%20avisen%20sobre%20nuevas%20fechas" target="_blank" rel="noopener" style="background: #fff; color: var(--terracota);">
          Avisarme de nuevas fechas
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  const root = document.getElementById('calendar-root') as HTMLElement;
  const API_URL = root?.dataset.apiUrl || 'https://mallku-api.vercel.app';

  function buildBadgeText(estado: string, cupos: number, locale: string): string {
    if (locale === 'en') {
      if (estado === 'disponible') return `${cupos} spots`;
      if (estado === 'pocos-cupos') return `Only ${cupos}!`;
      return 'Full';
    }
    if (locale === 'fr') {
      if (estado === 'disponible') return `${cupos} places`;
      if (estado === 'pocos-cupos') return `Plus que ${cupos}!`;
      return 'Complet';
    }
    // es
    if (estado === 'disponible') return `${cupos} cupos`;
    if (estado === 'pocos-cupos') return `¡Solo ${cupos}!`;
    return 'Completo';
  }

  function buildWhatsAppMsg(excursionNombre: string, fechaStr: string, locale: string): string {
    const fecha = new Date(fechaStr);
    if (locale === 'en') {
      const fechaTexto = fecha.toLocaleDateString('en-US', { day: 'numeric', month: 'long' });
      return `Hi, I'd like to check availability for ${excursionNombre} on ${fechaTexto}`;
    }
    if (locale === 'fr') {
      const fechaTexto = fecha.toLocaleDateString('fr-FR', { day: 'numeric', month: 'long' });
      return `Bonjour, je souhaite vérifier la disponibilité pour ${excursionNombre} le ${fechaTexto}`;
    }
    const fechaTexto = fecha.toLocaleDateString('es-AR', { day: 'numeric', month: 'long' });
    return `Hola, quiero consultar disponibilidad para ${excursionNombre} del ${fechaTexto}`;
  }

  function buildButtonLabel(estado: string, locale: string): string {
    if (locale === 'en') return estado !== 'completo' ? 'Inquire' : 'No spots';
    if (locale === 'fr') return estado !== 'completo' ? 'Renseigner' : 'Complet';
    return estado !== 'completo' ? 'Consultar' : 'Sin cupos';
  }

  async function actualizarCalendario() {
    try {
      const res = await fetch(`${API_URL}/api/v1/calendar`);
      if (!res.ok) return;
      const json = await res.json();
      if (!json.success || !Array.isArray(json.data)) return;

      const locale = root?.dataset.locale || 'es';

      json.data.forEach((date: any) => {
        const fechaNorm = new Date(date.fecha).toISOString().substring(0, 10);
        const card = root?.querySelector(
          `[data-slug="${date.excursionSlug}"][data-fecha="${fechaNorm}"]`
        ) as HTMLElement | null;
        if (!card) return;

        // Update card estado class
        card.className = `fecha-card ${date.estado}`;

        // Update badge
        const badge = card.querySelector('.estado-badge') as HTMLElement | null;
        if (badge) {
          badge.className = `estado-badge ${date.estado}`;
          badge.textContent = buildBadgeText(date.estado, date.cuposDisponibles, locale);
        }

        // Update footer button — link to online booking form
        const footer = card.querySelector('.fecha-footer') as HTMLElement | null;
        if (footer) {
          if (date.estado !== 'completo') {
            const btnLabel = buildButtonLabel(date.estado, locale);
            footer.innerHTML = `<a href="/reservar?dateId=${date.id}" class="btn btn-primary btn-full">${btnLabel}</a>`;
          } else {
            const btnLabel = buildButtonLabel('completo', locale);
            footer.innerHTML = `<button class="btn btn-disabled btn-full" disabled>${btnLabel}</button>`;
          }
        }
      });
    } catch {
      // Silently fail — SSG fallback remains visible
    }
  }

  // Update on page load and every 60 seconds
  actualizarCalendario();
  setInterval(actualizarCalendario, 60000);
</script>

<style>
  .hero-calendario {
    padding: 80px 0 40px;
    background:
      radial-gradient(ellipse 80% 50% at 50% 0%, rgba(209, 107, 56, 0.15), transparent),
      var(--color-bg-dark);
  }

  .hero-calendario h1 {
    margin: 0 0 20px;
    font-size: clamp(40px, 6vw, 56px);
  }

  .hero-calendario .accent {
    color: var(--color-primary);
  }

  .hero-lead {
    font-size: 18px;
    color: rgba(239, 227, 214, 0.8);
    max-width: 55ch;
    margin: 0 auto;
  }

  /* Leyenda */
  .leyenda-section {
    padding: 20px 0;
    background: var(--color-bg-dark);
    border-bottom: 1px solid var(--color-line-light);
  }

  .leyenda {
    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: wrap;
  }

  .leyenda-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: rgba(239, 227, 214, 0.8);
  }

  .estado-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .estado-dot.disponible {
    background: #22c55e;
  }

  .estado-dot.pocos-cupos {
    background: #f59e0b;
  }

  .estado-dot.completo {
    background: #6b7280;
  }

  /* Mes */
  .mes-titulo {
    font-size: 28px;
    margin: 0 0 var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-primary);
    display: inline-block;
  }

  /* Fechas Grid */
  .fechas-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
  }

  .fecha-card {
    background: rgba(239, 227, 214, 0.05);
    border: 1px solid var(--color-line-light);
    border-radius: var(--radius-xl);
    padding: 20px;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .fecha-card:not(.completo):hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
  }

  .fecha-card.completo {
    opacity: 0.6;
  }

  .fecha-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
  }

  .fecha-dia {
    display: flex;
    flex-direction: column;
  }

  .dia-numero {
    font-family: var(--font-display);
    font-size: 36px;
    line-height: 1;
    color: var(--color-primary);
  }

  .dia-semana {
    font-size: 13px;
    text-transform: capitalize;
    color: rgba(239, 227, 214, 0.7);
  }

  .estado-badge {
    padding: 4px 10px;
    border-radius: 0;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .estado-badge.disponible {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
  }

  .estado-badge.pocos-cupos {
    background: rgba(245, 158, 11, 0.2);
    color: #f59e0b;
  }

  .estado-badge.completo {
    background: rgba(107, 114, 128, 0.2);
    color: #9ca3af;
  }

  .fecha-content {
    flex-grow: 1;
    margin-bottom: 16px;
  }

  .fecha-content h3 {
    margin: 0 0 8px;
    font-size: 16px;
    line-height: 1.3;
  }

  .btn-disabled {
    background: #6b7280;
    cursor: not-allowed;
    opacity: 0.7;
  }

  /* Info Box */
  .info-box {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-xl);
    background: #fff;
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-xl);
  }

  .info-box h3 {
    margin: 0 0 var(--space-lg);
    font-size: 24px;
    color: var(--azul);
    text-align: center;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  .info-item {
    display: flex;
    gap: 16px;
  }

  .info-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .info-icon svg {
    width: 24px;
    height: 24px;
    fill: var(--terracota);
  }

  .info-item strong {
    display: block;
    margin-bottom: 4px;
    color: var(--azul);
  }

  .info-item p {
    margin: 0;
    font-size: 14px;
    color: var(--marron);
    line-height: 1.5;
  }

  @media (max-width: 1100px) {
    .fechas-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 700px) {
    .fechas-grid {
      grid-template-columns: 1fr;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
