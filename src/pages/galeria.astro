  }

  .galeria-info {
    padding: var(--space-md);
  }

  .galeria-info h3 {
    margin: 0 0 var(--space-xs);
    font-size: 14px;
    text-transform: uppercase;
  }

  .galeria-info p {
    margin: 0;
    font-size: 13px;
    opacity: 0.7;
  }

  /* Nota Box */
  .nota-box {
