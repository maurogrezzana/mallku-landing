  <!-- Event tracking for CTA clicks -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Track WhatsApp CTA clicks
      document.querySelectorAll('a[href*="wa.me"]').forEach(link => {
        link.addEventListener('click', () => {
          if (typeof posthog !== 'undefined') {
            posthog.capture('whatsapp_click', {
              page: window.location.pathname,
              link_text: (link as HTMLElement).textContent?.trim()
            });
          }
        });
      });

      // Track CTA button clicks
      document.querySelectorAll('.btn-primary').forEach(btn => {
        btn.addEventListener('click', () => {
          if (typeof posthog !== 'undefined') {
            posthog.capture('cta_click', {
              page: window.location.pathname,
              button_text: (btn as HTMLElement).textContent?.trim(),
              href: (btn as HTMLAnchorElement).href || ''
            });
          }
        });
      });

      // Track lead form submission
      const leadForm = document.getElementById('lead-form');
      if (leadForm) {
        leadForm.addEventListener('submit', () => {
          if (typeof posthog !== 'undefined') {
            posthog.capture('lead_capture_submit', {
              page: window.location.pathname
            });
          }
        });
      }
    });
  </script>

  <script>
    // Año dinámico en footer
    const yearEl = document.getElementById('year');
    if (yearEl) yearEl.textContent = new Date().getFullYear().toString();
  </script>
</body>
</html>
