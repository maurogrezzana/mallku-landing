---
import { siteConfig } from '../data/site';
import { localeHtmlLang, localeOg, defaultLocale, locales } from '../i18n/locales';
import { switchLocalePath } from '../i18n/index';
import type { Locale } from '../i18n/locales';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  structuredData?: Record<string, any>;
  locale?: Locale;
}

const {
  title = siteConfig.name,
  description = siteConfig.description,
  ogImage,
  ogType = 'website',
  structuredData,
  locale = defaultLocale
} = Astro.props;

const fullTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;
const resolvedOgImage = ogImage
  ? (ogImage.startsWith('http') ? ogImage : `${siteConfig.url}${ogImage}`)
  : `${siteConfig.url}${siteConfig.social.ogImage}`;

const htmlLang = localeHtmlLang[locale];
const ogLocale = localeOg[locale];
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang={htmlLang}>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{fullTitle}</title>
  <meta name="description" content={description} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <!-- DNS Prefetch -->
  <link rel="dns-prefetch" href="https://mallku-api.vercel.app" />
  <link rel="dns-prefetch" href="https://wa.me" />

  <!-- Google Fonts (preconnect + optimized weights) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Anton&family=Noto+Serif:ital,wght@0,400;0,600;1,400&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">

  <!-- Open Graph -->
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:image" content={resolvedOgImage} />
  <meta property="og:locale" content={ogLocale} />
  <meta property="og:site_name" content={siteConfig.name} />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={resolvedOgImage} />

  <!-- Canonical -->
  <link rel="canonical" href={Astro.url} />

  <!-- Hreflang alternate links -->
  {locales.map((loc) => {
    const altPath = switchLocalePath(currentPath, loc);
    const href = `${siteConfig.url}${altPath}`;
    const hreflangValue = loc === 'es' ? 'es' : loc;
    return <link rel="alternate" hreflang={hreflangValue} href={href} />;
  })}
  <link rel="alternate" hreflang="x-default" href={`${siteConfig.url}${switchLocalePath(currentPath, defaultLocale)}`} />

  <!-- Structured Data -->
  {structuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  )}
</head>
<body>
  <slot />

  <!-- PostHog Analytics -->
  <script>
    // PostHog - replace 'phc_YOUR_KEY' with your actual PostHog project API key
    const POSTHOG_KEY = 'phc_YOUR_KEY';
    if (POSTHOG_KEY !== 'phc_YOUR_KEY') {
